<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="darkRedBackground" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/dark_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="midRedBackground" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/mid_red</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="lightRedBackground" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/light_red</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mainTitleText" parent="@style/darkRedBackground">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="mainCardText" parent="@style/lightRedBackground">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="listText" parent="@style/lightRedBackground">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="detailsText" parent="@style/lightRedBackground">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="detailsTextTitle" parent="@style/darkRedBackground">
        <item name="android:textSize">25sp</item>
    </style>

</resources>